extends ./layout/admin

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    style.
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, #46b8a9, #FFFFFF);
            background-size: cover;
            z-index: -1; 
        }
        .form-title {
            background-color: rgba(148, 193, 35); 
            border-radius: 0.8rem; 
            padding: 0.5rem 1rem; 
            margin: 0.5rem 0; 
        }
   
block contenido 

    // Resto del contenido
    div(class="px-20")
        div(class="flex flex-col md:flex-row items-center py-10 gap-4") 
            h2(class="text-sm uppercase text-black font-bold") Filtrar Campañas:

            div(class="w-full  md:w-auto flex items-center gap-2")
                label(for="campaign" class="text-sm w-24 uppercase text-black font-bold") Campañas 
                select(id="campaign" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-sm shadow") 
                    option(value="") Seleccione la campaña 
                    each campaigns in campaign 
                        option(value=campaigns.id)=campaigns.nombre 
        h3(class="text-center text-3xl font-extrabold form-title text-white") UBICACIÓN DE LOS PACIENTES EN EL MAPA
            

        div(id="mapa-inicio" class="h-[600px] mt-10")

        section(class="px-10")
            br
            h2(class="text-center text-3xl font-extrabold pt-10 form-title text-white") PACIENTES
            
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each pacientes in paciente 
                    include ./templates/card

    // Footer con imagen que abarca toda la página
    footer(class="w-full p-4 flex justify-between items-center text-black mt-10 m-4")
        p &copy; 2024 Fundacion Mexico Sin Sordera A.C
        img(src="/img/logo/logo-mexico-sin-sordera-2023.png" alt="Logo" style="height: 5rem; width: auto;" class="h-12 footer-img")

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js")