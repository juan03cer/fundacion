extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    style.
        .nav-item {
            margin-left: 2rem; 
            margin-right: 2rem; 
        }
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('/img/logo/background-mexico-sin-sordera-2024.jpg') no-repeat center center fixed;
            background-size: cover;
            opacity: 0.3; 
            z-index: -1; 
        }
        header {
            background: rgba(148, 220, 34, 0.8); 
        }
        footer {
            background: rgba(148, 220, 34, 0.8); 
        }

        
        .footer-img {
            box-shadow: 0 4px 8px rgba(112, 111, 111, 0.3);
        }

block contenido 
    // Header con imagen que abarca toda la página
    header(class="w-full p-4 flex justify-between items-center m-4")
        img(src="/img/logo/logo-noyolo.png" alt="Inicio Logo" style="height: 5rem; width: auto;")
        nav(class="flex-1 flex justify-center")
            ul(class="flex text-white")
                li(class="nav-item") 
                    a(href="#" class="hover:underline font-extrabold text-black") INICIO
                li(class="nav-item") 
                    a(href="#" class="hover:underline font-extrabold text-black") DONACIONES
                li(class="nav-item") 
                    a(href="#" class="hover:underline font-extrabold text-black") ACERCA DE NOSOTROS
                li(class="nav-item") 
                    a(href="#" class="hover:underline font-extrabold text-black") CONTACTO
        img(src="/img/logo/logo-sello.png" alt="Final Logo" style="height: 5rem; width: auto;")

    // Resto del contenido
    div(class="px-20")
        div(class="flex flex-col md:flex-row items-center py-10 gap-4") 
            h2(class="text-sm uppercase text-black font-bold") Filtrar Campañas:

            div(class="w-full  md:w-auto flex items-center gap-2")
                label(for="campaign" class="text-sm w-24 uppercase text-gray-500 font-bold") Campañas 
                select(id="campaign" class="flex-1 bg-white w-full px-3 py-2 border border-gray-300 rounded-sm shadow") 
                    option(value="") -Selecione la campaña- 
                    each campaigns in campaign 
                        option(value=campaigns.id)=campaigns.nombre 
        h3(class="text-center text-3xl font-extrabold ") Ubicacion de los pacientes en el mapa
            

        div(id="mapa-inicio" class="h-[600px] mt-10")

        section(class="px-10")
            h2(class="text-center text-3xl font-extrabold pt-10") Pacientes
            
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each pacientes in paciente 
                    include ./templates/card

    // Footer con imagen que abarca toda la página
    footer(class="w-full p-4 flex justify-between items-center text-black mt-10 m-4")
        p &copy; 2024 Fundacion Mexico Sin Sordera A.C
        img(src="/img/logo/logo-R.jpg" alt="Logo" style="height: 5rem; width: auto;" class="h-12 footer-img")

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mapaInicio.js")
