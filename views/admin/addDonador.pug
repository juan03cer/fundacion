extends ../layout/super

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center  FSFLMX
            span.font-normal  Sin Sordera
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            h1 Agregar a Lista de Correos

            form.space-y-8(method="POST" action="/admin/donadores/crear")
                input(type="hidden" name="_csrf" value=csrfToken)

                div.space-y-5
                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="nombre") Nombre
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre del Donador" type="text" name="nombre" required)

                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="gmaildonador") Gmail del Donador
                        input#gmaildonador.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Correo Electrónico" type="email" name="gmaildonador" required)

                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="telefono") Teléfono
                        input#telefono.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Teléfono" type="tel" name="telefono" required)

                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="telcontacto") Teléfono de Contacto
                        input#telcontacto.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Teléfono de Contacto" type="tel" name="telcontacto" required)

                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="empresa") Empresa
                        input#empresa.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Empresa" type="text" name="empresa" required)

                    div
                        label.block.text-sm.uppercase.text-gray-400.mb-2.font-bold(for="montodonado") Monto Donado
                        input#montodonado.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Monto Donado" type="text" name="montodonado" required)

                input(class="w-full py-3 bg-indigo-600 hover:bg-indigo-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Agregar Donador")
                
                a(href="/admin/emails" class="w-full py-3 bg-red-600 hover:bg-red-700 rounded text-white font-bold uppercase cursor-pointer flex items-center justify-center md:w-auto") Regresar