extends ../layout/super

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    style.
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, #46b8a9, #FFFFFF);
            background-size: cover;
            z-index: -1;
        }
        .form-container {
            background-color: rgba(255, 255, 255, 0.5); 
            border-radius: 0.8rem; 
        }
        .form-title {
            background-color: rgba(148, 193, 35);
            border-radius: 0.8rem; 
            padding: 0.5rem 1rem; 
            margin: 0.5rem 0; 
        }
    
block contenido
     div.py-10 
         h1.text-4xl.my-10.font-extrabold.text-center.form-title.text-white Fundación México Sin Sordera A.C
            span.font-normal
         br
         h2.text-center.text-2xl.font-extrabold Edición de Usuario

         if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                   p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


         div(class="form-container shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
              form.space-y-8(method="POST" )
                input(type="hidden" name="_csrf" value = csrfToken)
                h2.text-center.text-2xl.font-extrabold= pagina
                div.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Información del Asociado
                   
                    div
                         label.block.text-sm.uppercase.text-gray-400.mb-2.fond-bold(for="nombre") Nombre del Asociado
                         input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Nombre del paciente" type="text" name="nombre" value= datos ? datos.nombre : '' )        
                    div
                         label.block.text-sm.uppercase.text-gray-400.mb-2.fond-bold(for="email") Correo Electrónico Vinculado
                         input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="email del paciente" type="email" name="email" value= datos ? datos.email : '' )

                    input(class="w-full py-3 bg-verde-pantone  hover:bg-azul-tur rounded text-white font-extrabold uppercase cursor-pointer" type="submit" value="Guardar Cambios")