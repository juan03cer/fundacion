extends ../layout/super

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center FSFLMX
            span.font-normal Sin Sordera
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(action=`/admin/mensajes/editar/${mensaje.id}` method="POST")
                input(type="hidden" name="_csrf" value=csrfToken)
                
                div.mb-4
                    label(for="alias" class="block text-gray-700 text-sm font-bold mb-2") Alias
                    input(type="text" id="alias" name="alias" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value=mensaje.alias)
                
                div.mb-4
                    label(for="asunto" class="block text-gray-700 text-sm font-bold mb-2") Asunto
                    input(type="text" id="asunto" name="asunto" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" value=mensaje.asunto)

                div.mb-4
                    label(for="mensaje" class="block text-gray-700 text-sm font-bold mb-2") Mensaje
                    textarea(id="mensaje" name="mensaje" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" rows="5")= mensaje.mensaje

                div.flex.items-center.justify-between
                    button(type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline") Guardar Cambios
                    a(href="/admin/mensajes" class="rounded px-8 py-2 bg-red-600 hover:bg-red-700 text-sm font-bold text-center text-white uppercase my-2 inline-block") Cancelar
                                                    