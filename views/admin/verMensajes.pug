extends ../layout/super

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    div.py-10 
        h1.text-4xl.my-10.font-extrabold.text-center FSFLMX
            span.font-normal Sin Sordera
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            
            div(class="flex justify-between items-center")
                a(href="/admin/mensajes/crear" class="rounded px-10 py-2 bg-indigo-600 hover:bg-indigo-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full md:w-auto") Crear Nuevo Mensaje Predefinido
                a(href="/admin/emails" class="rounded px-10 py-2 bg-red-600 hover:bg-red-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full md:w-auto") Regresar
            
            if hayMensajes
                table.w-full
                    thead
                        tr
                            th.text-left.py-2.px-4 Alias
                            th.text-left.py-2.px-4 Asunto
                            th.text-left.py-2.px-4 Mensaje
                            th.text-left.py-2.px-4 Acciones
                    tbody
                        each mensaje in mensajes
                            tr
                                td.py-2.px-4= mensaje.alias
                                td.py-2.px-4= mensaje.asunto
                                td.py-2.px-4= mensaje.mensaje
                                td.py-2.px-4.flex.space-x-2
                                    a(href=`/admin/mensajes/editar/${mensaje.id}` class="rounded px-8 py-2 bg-green-500 hover:bg-green-700 text-sm font-bold text-center text-white uppercase my-2 inline-block") Editar
                                    button(type="button" class="bg-red-500 text-white px-8 py-2 rounded" onclick=`confirmDelete(${mensaje.id})`) Eliminar
                                    a(href=`/admin/mensajes/utilizar/${mensaje.id}` class="rounded px-8 py-2 bg-indigo-600 hover:bg-indigo-700 text-sm font-bold text-center text-white uppercase my-2 inline-block") Utilizar
            else
                p.text-center.text-gray-500 No existen mensajes guardados.

block scripts 
    script.
        function confirmDelete(id) {
            if (confirm('¿Estás seguro de que deseas eliminar este mensaje predefinido?')) {
                window.location.href = `/admin/mensajes/eliminar/${id}`;
            }
        }