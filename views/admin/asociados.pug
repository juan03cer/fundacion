extends ../layout/admin

block styles 
   meta(name="csrf-token" content=csrfToken)

block contenido
     div.py-10 
         h1.text-4xl.my-10.font-extrabold.text-center  FSFLMX
            span.font-normal  Sin Sordera
         h2.text-center.text-2xl.font-extrabold=pagina
         
         a(href="/usuarios/crear" class="rounded px-10 py-2 bg-indigo-600 hover:bg-indigo-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full md:w-auto" ) Registrar Paciente 
        
        
         //- pre= JSON.stringify(usuario,undefine,2)
         if usuario.length
            div(class="bg-white shadow rounded-lg")
                ul(class="divide-y divide-gray-200")
                    each usuarios in usuario
                         li 
                           div(class="bg-white shadow rounded-lg p-6 flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 md:space-y-0 gap-4") 
                              div(class="sm:w-2/4 md:w-2/6 lg:w-4/6 space-x-3") 
                                
                                 a(class="block text-2xl font-extrabold text-indigo-600" href=`/usuarios/${usuarios.id}`)= 'Trabajador: ' + usuarios.nombre

                           div(class="sm:w-1/4 md:w-2/6 lg:w-4/6 flex flex-col lg:flex-row gap-2" ) 
                                 a(href=`/usuarios/editar/${usuarios.id}` class="text-center w-full md:px-5 md:py-2 py-5 text-xs leading-5 font-semibold rounded cursor-pointer bg-indigo-100 text-indigo-800") Editar        
                                    form(method="POST" action=`/usuarios/eliminar/${usuarios.id}`)
                                     input(type="hidden" name="_csrf" value = csrfToken)
                                     input(type="submit" class='w-full px-5 py-5 md:py-2 text-xs leading-5 font-semibold rounded cursor-pointer bg-red-100 text-red-800' value="Eliminiar")
           
