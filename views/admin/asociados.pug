extends ../layout/super

block styles 
   meta(name="csrf-token" content=csrfToken)
   style.
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, #46b8a9, #FFFFFF);
            background-size: cover;
            z-index: -1;
        }
        .form-container {
            background-color: rgba(255, 255, 255, 0.5); /* Fondo blanco con opacidad */
            border-radius: 0.8rem; /* Bordes redondeados */
        }

block contenido
     div.py-10 
         h1.text-4xl.my-10.font-extrabold.text-center.text-gray-800  Fundación México Sin Sordera A.C
            span.font-normal
         h2.text-center.text-2xl.font-extrabold.text-gray-700 Personas Asociadas a la Fundación
         br
         //- pre= JSON.stringify(usuario, undefined, 2)
         if usuario.length
            div.form-container
                div.form-container.max-w-7xl.mx-auto.shadow-lg.rounded-lg.overflow-hidden
                    ul.divide-y.divide-gray-300
                        each usuarios in usuario
                            li
                                div(class="form-container p-6 flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-4 sm:space-y-0 gap-4 shadow rounded-lg mb-4")
                                    div(class="flex-grow space-y-2 form-container ")
                                        a(class="form-container block text-2xl font-extrabold text- hover:underline" href=`/usuarios/${usuarios.id}`)= 'Trabajador: ' + usuarios.nombre
                                        div
                                          h2='Correo Electrónico de la Persona Asociada: '
                                          h2= ''+usuarios.email
                                                         

                                    div(class="form-container flex space-x-2")
                                        
                                        form(method="POST" action=`/usuarios/eliminar/${usuarios.id}`)
                                            input(type="hidden" name="_csrf" value=csrfToken)
                                            input(type="submit" class='text-center px-4 py-2 text-xs font-semibold rounded bg-red-100 text-red-800 hover:bg-red-200 cursor-pointer' value="Eliminar")
                                        a(href=`/admin/editarAsociado/${usuarios.id}` class="text-center px-4 py-2 text-xs font-semibold rounded bg-indigo-100 text-indigo-800 hover:bg-indigo-200") Editar