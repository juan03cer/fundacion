extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content=csrfToken)
    style.
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, #46b8a9, #FFFFFF);
            background-size: cover;
            z-index: -1; 
        }

block contenido
     div.py-10 
         h1.text-4xl.my-10.font-extrabold.text-center  Fundación México Sin Sordera A.C
            span.font-normal
         h2.text-center.text-2xl.font-extrabold= pagina

         if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                   p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


         div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
              form(id="imagen" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/pacientes/agregar-imagen/${paciente.id}`)
                input(type="hidden" name="_csrf" value = csrfToken)

              button(id="publicar" class="mt-5 w-full py-3 bg-indigo-600 hover:bg-indigos-700 rounded text-white font-bold uppercase cursor-pointer" type="button" ) Subir paciente

block scripts
    script(src="/js/agregarImagen.js")
