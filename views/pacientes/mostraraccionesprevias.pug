extends ../layout/admin

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    style.
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, #46b8a9, #FFFFFF);
            background-size: cover;
            z-index: -1; 
        }
        .form-container {
            background-color: rgba(255, 255, 255, 0.5); /* Fondo blanco con opacidad */
            border-radius: 0.8rem; /* Bordes redondeados */
        } 

block contenido
    div.py-10.flex.justify-center
        div.max-w-4xl.w-full.rounded-lg
            h1.text-4xl.my-10.font-extrabold.text-center  Fundación México Sin Sordera A.C
                span.font-normal  
            if errores
                div(class="max-w-md mx-auto my-10")
                    each error in errores 
                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg   
            div(class="flex flex-col items-center gap-4 py-5") 
            div(class="mt-5 md:flex md:gap-4 md:items-start")
                div(class=" form-container shadow rounded-lg") 
                    div(class="px-5 py-10 space-y-5")
                        h2(class="text-2xl leading-6 font-bold text-gray-900 text-center") Información de las acciones previas
                        div(class="flex justify-center gap-4 mb-5") 
                            a(href=`/pacientes/${pacienteId.id}` class="text-center w-full md:px-5 md:py-2 py-5 text-xs leading-5 font-semibold rounded cursor-pointer bg-green-200 text-black") Ver Informacion General    
                            - if (pacienteId.beneficiario && pacienteId.beneficiario.publicado)
                                 a(href=`/pacientes/mostrardatosbeneficiario/${pacienteId.id}` class="text-center w-full md:px-5 md:py-2 py-5 ml-5 text-xs leading-5 font-semibold rounded cursor-pointer bg-yellow-200 text-black") Ver datos del beneficiario    
                            - else
                                 a(class="text-center w-full md:px-5 md:py-2 py-5 text-xs ml-5 leading-5 font-semibold rounded bg-red-200 cursor-not-allowed text-black")
                                                | Sin Datos Del beneficiario       
                             
                        h2.text-center.text-2xl.font-extrabold= pagina
                        div(class="grid grid-cols-1 md:grid-cols-2 gap-4") 

                            p(class="text-gray-600 font-bold text-1xl") ¿QUE EMPRESAS DE IMPLANTE COCLEAR CONOCE?
                                span(class="text-gray-800 block text-lg")= pacienteId.accionesprevia.empresaimplante
                            p(class="text-gray-600 font-bold text-1xl") ¿CON QUE MARCAS A TENIDO CONTACTO?
                                span(class="text-gray-800 block text-lg")= pacienteId.accionesprevia.marcas
                            p(class="text-gray-600 font-bold text-1xl") ¿LE PROPORCIONARON COTIZACION? ANOTE EL MONTO COTIZADO
                                span(class="text-gray-800 block text-lg")= pacienteId.accionesprevia.cotizacion
                            p(class="text-gray-600 font-bold text-1xl") EN EL CENTRO DE IMPLANTE DONDE ESTA ¿LE DAN OPCION DE ELEGIR MARCA DE IMPLANTE COCLEAR?
                                span(class="text-gray-800 block text-lg")= pacienteId.accionesprevia.centroimplante
                            p(class="text-gray-600 font-bold text-1xl") ¿HA TENIDO CONTACTO CON OTRA FUNDACION?
                                span(class="text-gray-800 block text-lg")= pacienteId.accionesprevia.contacto
                            p(class="text-gray-600 font-bold text-1xl") ¿CON CUAL FUNDACION A TENIDO CONTACTO?
                                span(class="text-gray-800 block text-lg")= pacienteId.accionesprevia.cualcontacto
                            p(class="text-gray-600 font-bold text-1xl") ¿HA SOLICITADO APOYO A ALGUNA INSTITUCION PUBLICA, SERVIDOR PUBLICO
                                span(class="text-gray-800 block text-lg")= pacienteId.accionesprevia.apoyo
                            p(class="text-gray-600 font-bold text-1xl") ¿A QUIEN SOLICITADO APOYO?
                                span(class="text-gray-800 block text-lg")= pacienteId.accionesprevia.quien
                            h2(class="text-2xl leading-6 font-bold text-gray-900 ") Estrategias
                            br
                            p(class="text-gray-600 font-bold text-1xl") ¿CUENTA CON PREVISION ECONOMICA?
                                span(class="text-gray-800 block text-lg")= pacienteId.accionesprevia.prevencioneconomica
                            p(class="text-gray-600 font-bold text-1xl") CAMPAÑA DE RECAUDACION
                                span(class="text-gray-800 block text-lg")= pacienteId.accionesprevia.campaignrecaudacion


