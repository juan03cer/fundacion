extends ../layout/admin

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    
block contenido
    div.py-10.flex.justify-center
        div.max-w-4xl.w-full.bg-white.shadow-md.rounded-lg
            h1.text-4xl.my-10.font-extrabold.text-center  FSFLMX
                span.font-normal  Sin Sordera
            if errores
                div(class="max-w-md mx-auto my-10")
                    each error in errores 
                        p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg   
            div(class="flex flex-col items-center gap-4 py-5") 
                a(href=`/pacientes/datosmedicos/${paciente.id}` class="text-center w-full md:px-5 md:py-2 py-5 text-xs leading-5 font-semibold rounded cursor-pointer bg-green-200 text-black") Completar datos médicos      
                a(href=`/pacientes/beneficiario/${paciente.id}` class="text-center w-full md:px-5 md:py-2 py-5 text-xs leading-5 font-semibold rounded cursor-pointer bg-yellow-200 text-black") Completar datos del beneficiario   
                a(href=`/pacientes/editar/${paciente.id}` class="text-center w-full md:px-5 md:py-2 py-5 text-xs leading-5 font-semibold rounded cursor-pointer bg-red-200 text-black") Editar      
            div(class="mt-5 md:flex md:gap-4 md:items-start")
                div(class=" bg-white shadow rounded-lg") 
                    div(class="px-5 py-10 space-y-5")
                        h2(class="text-2xl leading-6 font-bold text-gray-900 text-center") Información del paciente
                        div(class="flex justify-center gap-4 mb-5") 
                            a(href=`/pacientes/datosmedicos/${paciente.id}` class="text-center w-full md:px-5 md:py-2 py-5 text-xs leading-5 font-semibold rounded cursor-pointer bg-green-200 text-black") Ver datos médicos      
                            a(href=`/pacientes/beneficiario/${paciente.id}` class="text-center w-full md:px-5 md:py-2 py-5 text-xs leading-5 font-semibold rounded cursor-pointer bg-yellow-200 text-black") Ver datos del beneficiario   
                        h2.text-center.text-2xl.font-extrabold= pagina
                        div(class="grid grid-cols-1 md:grid-cols-2 gap-4") 
                            p(class="text-gray-600 font-bold text-1xl") ¿PADECE ALGUNA ENFERMEDAD?
                                span(class="text-gray-800 block text-lg")= paciente.datomedico.enfermedad
                            p(class="text-gray-600 font-bold text-1xl") ¿SIENTE ALGÚN RUIDO O SONIDO DENTRO DE SUS OÍDOS?
                                span(class="text-gray-800 block text-lg")= paciente.datomedico.ruidosonido
                            p(class="text-gray-600 font-bold text-1xl") ¿ALGÚN FAMILIAR USA O HA USADO AA?
                                span(class="text-gray-800 block text-lg")= paciente.datomedico.familiarusausado
                            p(class="text-gray-600 font-bold text-1xl") ¿ESCUCHA MEJOR DEL LADO?
                                span(class="text-gray-800 block text-lg")= paciente.datomedico.ladoescucha
                            p(class="text-gray-600 font-bold text-1xl") ¿ESTÁ EXPUESTO CONSTANTEMENTE A RUIDOS ALTOS?
                                span(class="text-gray-800 block text-lg")= paciente.datomedico.exposicion
                            p(class="text-gray-600 font-bold text-1xl") ¿QUÉ TIPO DE RUIDO?
                                span(class="text-gray-800 block text-lg")= paciente.datomedico.tiporuido
                            p(class="text-gray-600 font-bold text-1xl") SERVICIO REQUERIDO
                                span(class="text-gray-800 block text-lg")= paciente.datomedico.serviciorequerido.nombre
                            p(class="text-gray-600 font-bold text-1xl") Correo:
                                span(class="text-gray-800 block text-lg")= paciente.correo
                            p(class="text-gray-600 font-bold text-1xl") Última Persona que actualizó el dato Médico:
                                span(class="text-gray-800 block text-lg")= paciente.datomedico.usuario.nombre
