extends ./layout/campaings

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    style.
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, #46b8a9, #FFFFFF);
            background-size: cover;
            z-index: -1;
        }
        .campaign-section {
            background-color: rgba(255, 255, 255, 0.5);;
            padding: 20px;
            border-radius: 20px; 
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 2px;
            max-width: 100%;
        }
        .campaign-title {
            color: #333; 
            padding: 20px;
        }
        .campaign-name {
            color: #706f6f; 
        }
        .campaigns-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 2fr));
            gap: 20px;
            justify-items: center; 
        }
block contenido 
    section(class="py-5")
        h2(class="text-4xl my-10 font-extrabold text-center")= pagina

        if campaigns.length 
            div.campaign-section
                p(class="text-black font-bold text-xl") Campa√±a:
                    each campaign in campaigns
                        include ./templates/cardcamping
        else 
            p(class="text-center text-gray-800 text-sm py-10") No Hay Resultados
