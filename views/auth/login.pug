extends ../layout/index

block styles
    style.
        /* Fondo de la página */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: url('/img/logo/fondo-cuarto.jpg') no-repeat center center fixed;
            background-size: cover;
            opacity: 0.2; /* Ajusta la opacidad de la imagen de fondo */
            z-index: -1; /* Asegúrate de que el fondo esté detrás del contenido */
        }


block contenido
     div.py-10 
         h1.text-4xl.my-10.font-extrabold.text-center Fundacion Mexico
            span.font-normal  Sin Sordera A.C
         h2.text-center.text-2xl.font-extrabold=pagina
         
         if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                   p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


         .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow 
                // Contenedor flexible para el formulario y la imagen
                div.flex.flex-col.md.flex-row.items-center.justify-center
                    img(src="/img/logo/logo-noyolo.png" alt="Imagen" class="w-full md:w-1/3") 
                    // Formulario
                    form.space-y-5(method="POST" action="/auth/login" class="w-full md:w-auto md:ml-4")
                        input(type="hidden" name="_csrf" value = csrfToken)
                     
                        div
                            label.block.text-sm.uppercase.text-gray-400.mb-2.fond-bold(for="email") Email de registro
                            input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email")        
                        div
                            label.block.text-sm.uppercase.text-gray-400.mb-2.fond-bold(for="password") password
                            input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu password" type="password" name="password")        
                   
                        input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Iniciar Sesion")

                        div.flex.items-center.justify-between
                        a.text-gray-.text-xs(href="/auth/registro") ¿No tienes Cuenta?&nbsp;Crear una
                            a.text-gray-.text-xs(href="/auth/olvide-password") &nbsp;&nbsp;&nbsp;&nbsp;Olvide mi password 