extends ../layout/index

block styles
    style.
        /* Fondo de la página */
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, #46b8a9, #FFFFFF);
            background-size: cover;
            z-index: -1; 
        }
        .form-container {
            background-color: rgba(255, 255, 255, 0.5); 
            border-radius: 0.8rem; 
        }


block contenido
     div.py-10 
         h1.text-4xl.my-10.font-extrabold.text-center  Fundación México Sin Sordera 
            span.font-normal  A.C
         h2.text-center.text-2xl.font-extrabold Recupera tu Acceso Fundación México Sin Sordera A.C

         if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                   p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg


         .mt-8.mx-auto.max-w-md
            .form-container.bg-white.py-8.px-4.shadow 
                form.space-y-5(method='POST' action="/auth/olvide-password" noValidate)
                  input(type="hidden" name="_csrf" value = csrfToken)
                  div

                     label.block.text-sm.uppercase.text-black.mb-2.fond-bold(for="email") CORREO ELECTRÓNICO
                     input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa tu Correo Electrónico" type="email" name="email")        
                  
                  div.flex.items-center.justify-between
                      a.text-gray-.text-xs(href="/auth/registro") ¿No tienes Cuenta? Crear una
                      a.text-gray-.text-xs(href="/auth/login") ¿Ya tienes cuenta? Iniciar Sesión 

                  input(class="w-full bg-verde-pantone hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Enviar Instrucciones")           