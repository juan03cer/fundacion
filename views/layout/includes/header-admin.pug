header.bg-gradient-to-r.from-green-800.to-purple-700.p-2
  .container.mx-auto.px-8.flex.justify-between.items-center
    // Contenedor para la imagen del lado izquierdo
    a(href="/") 
     .relative.inline-block.bg-white.p-2.rounded-lg.shadow-lg
        img(src="/img/logo/logo-mexico-sin-sordera-2023.png" alt="Logo" style="height: 6rem; width: auto;" class="relative z-10 rounded-lg")

    // Contenedor para la información del lado derecho
    .flex.items-center.gap-4
      
      nav(class="my-5 text-sm md:flex md:items-center md:justify-start gap-3 font-bold text-white")
        a(href="/mis-pacientes" class="bg-verde-pantone hover:bg-white cursor-pointer rounded-lg text-white uppercase font-bold p-2 text-sm hover:text-gray-300 shadow-lg") Mis registros
        a(href="" class="bg-verde-pantone hover:bg-white cursor-pointer rounded-lg text-white uppercase font-bold p-2 text-sm hover:text-gray-300 shadow-lg") Mi perfil 
      form(action="/auth/cerrar-sesion" method="POST" class="my-5")
        input(type="hidden" name="_csrf" value=csrfToken)
        input(type="submit" class="bg-white text-black py-2 px-10 rounded-lg hover:text-gray-300 font-extrabold shadow-lg uppercase" value="Cerrar Sesión")

hr(class=" bg-red-300 ")
div(class="bg-gradient-to-r from-green-700 to-purple-700 py-5 md:block")
  div(class="container mx-auto px-8 flex justify-between")
    nav(class="flex gap-4 items-center")
      
        a(href="/sitio/campaings" class="bg-verde-pantone hover:bg-white cursor-pointer rounded-lg text-white uppercase font-bold p-2 text-sm hover:text-gray-300 shadow-lg") Campañas
   
    form(action="/buscadorcampaing" method="POST" class="flex gap-3 items-center")
      input(type="hidden" name="_csrf" value=csrfToken)
      label(for="termino" class="text-sm uppercase font-bold text-white") Busqueda 
      input(type="text" id="termino" name="termino" placeholder="Buscar Paciente" class="p-2 rounded-lg shadow text-sm")
      input(type="submit" class="bg-verde-pantone hover:bg-gray cursor-pointer rounded-lg text-white uppercase font-bold p-2 text-sm" value="Buscar")
