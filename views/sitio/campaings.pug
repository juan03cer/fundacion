extends ../layout/campaings

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
    style.
        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom, #46b8a9, #FFFFFF);
            background-size: cover;
            z-index: -1;
        }
        .campaign-section {
            background-color: rgba(255, 255, 255, 0.5);;
            padding: 20px;
            border-radius: 20px; 
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 2px;
            max-width: 100%;
        }
        .campaign-title {
            color: #333; 
            padding: 20px;
        }
        .campaign-name {
            color: #706f6f; 
        }
        .campaigns-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 2fr));
            gap: 20px;
            justify-items: center; 
            margin: 0 auto; 
        }
        .form-title {
            background-color: rgba(148, 193, 35); 
            border-radius: 0.8rem; 
            padding: 0.5rem 1rem; 
            margin: 0.5rem 0; 
        }
        .form-container {
            background-color: rgba(255, 255, 255, 0.5); 
            border-radius: 0.8rem; 
            padding: 0.5rem 1rem; 
            margin: 0.5rem 0;  
        }
block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center.form-title.text-white  Fundación México Sin Sordera A.C
        br
        h2.text-4xl.my-10.font-extrabold.text-center.form-container CAMPAÑAS
        br
        div.campaigns-grid
            each campaing in campaings
                div.campaign-section
                    p(class="campaign-title text-black font-bold text-xl") Campaña:
                        span(class="campaign-name block text-lg")= campaing.nombre
                    p(class="campaign-title text-green-600 font-bold text-xl") Descripcion:
                        span(class="campaign-name block text-lg")= campaing.descripcion
                    p(class="campaign-title text-green-600 font-bold text-xl") Fue Creado el:
                        span(class="campaign-name block text-lg")= campaing.createdAt